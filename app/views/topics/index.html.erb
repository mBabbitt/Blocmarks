<h1 class="text-center">Blocmark Topics</h1>

<div class="row">
  <div class="col-md-8">
    <%= render partial: 'topics/topic', collection: @topics %>
   
  </div>
  <div class="col-md-4">
    <% if current_user %>
      <%= render partial: 'topics/form', locals: { topic: @topic } %>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary pull-right' %>
    <% end %>
  </div>
</div>